inputbar {
  children: [textbox-prompt-colon];
  spacing: 5;
  padding: 1;
  border: 2;
  border: 0.1% 0.3% 0.1% 0.3%;
  border-radius: 12;
  border-color: @bright-blue;
}

textbox-prompt-colon {
  str: "☣ 𝑆𝑒𝑙𝑒𝑐𝑡 𝑇ℎ𝑒𝑚𝑒 ☠";
	text-color:	@foreground;
  padding: 0% 0 1% 0%;
  margin: 0.5% 0% 0% 3%;
  font: "Fira Code 20";
}

prompt {
   padding: 6;
}

entry {
  background-color: rgba(92,99,112,0.8); /* bright-black */
  color: @bright-cyan;
  padding: 5px;
  border: 1;
  border-radius: 5;
  border-color: @bright-blue;
}

ci {
  border: 5;
}

listview {
  fixed-height: 0;
  spacing: 0;
  scrollbar: false;
  padding: 10 0;
  lines: 5;
}

element {
  padding: 5;
  margin: 2;
  border: 2;
  border-radius: 5;
  border-color: rgba(125, 166, 255, 0.3); /* normal-green */
}

element.selected {
   background-color: #444b6a;/* normal-green */
}

